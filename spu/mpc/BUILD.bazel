load("//bazel:spu.bzl", "spu_cc_library")

package(default_visibility = ["//visibility:public"])

spu_cc_library(
    name = "io_interface",
    hdrs = ["io_interface.h"],
    deps = [
        "//spu/core:array_ref",
        "//spu/core:type",
    ],
)

spu_cc_library(
    name = "io_test",
    testonly = 1,
    srcs = ["io_test.cc"],
    hdrs = ["io_test.h"],
    deps = [
        ":io_interface",
        "//spu/mpc/util:ring_ops",
        "//spu/mpc/util:simulate",
        "@com_google_googletest//:gtest",
    ],
    alwayslink = True,
)

spu_cc_library(
    name = "factory",
    srcs = ["factory.cc"],
    hdrs = ["factory.h"],
    deps = [
        "//spu:spu_cc_proto",
        "//spu/mpc/aby3",
        "//spu/mpc/cheetah",
        "//spu/mpc/ref2k",
        "//spu/mpc/semi2k",
    ],
)

spu_cc_library(
    name = "kernel",
    srcs = ["kernel.cc"],
    hdrs = ["kernel.h"],
    deps = [
        "//spu/core:array_ref",
        "//spu/core:type",
        "//spu/mpc/util:cexpr",
    ],
)

spu_cc_library(
    name = "object",
    srcs = ["object.cc"],
    hdrs = ["object.h"],
    deps = [
        ":kernel",
        "//spu/core:profile",
    ],
)

spu_cc_library(
    name = "api",
    srcs = ["api.cc"],
    hdrs = ["api.h"],
    deps = [
        ":object",
    ],
)

spu_cc_library(
    name = "api_test",
    testonly = 1,
    srcs = ["api_test.cc"],
    hdrs = ["api_test.h"],
    deps = [
        ":api",
        ":object",
        "//spu/mpc/util:communicator",
        "//spu/mpc/util:simulate",
        "@com_google_googletest//:gtest",
    ],
    alwayslink = True,
)
