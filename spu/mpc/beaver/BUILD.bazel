load("//bazel:spu.bzl", "spu_cc_library", "spu_cc_test")
load("@yasl//bazel:yasl.bzl", "EMP_COPT_FLAGS")

package(default_visibility = ["//visibility:public"])

spu_cc_library(
    name = "beaver",
    hdrs = ["beaver.h"],
    deps = [
        "//spu/core:array_ref",
        "//spu/core:type_util",
    ],
)

spu_cc_library(
    name = "beaver_test",
    testonly = 1,
    srcs = ["beaver_test.cc"],
    hdrs = ["beaver_test.h"],
    deps = [
        ":beaver",
        "//spu/mpc/util:ring_ops",
        "//spu/mpc/util:simulate",
        "@com_google_googletest//:gtest",
    ],
    alwayslink = True,
)

spu_cc_library(
    name = "beaver_ref",
    srcs = ["beaver_ref.cc"],
    hdrs = ["beaver_ref.h"],
    deps = [
        ":beaver",
        "//spu/mpc/util:ring_ops",
    ],
)

spu_cc_test(
    name = "beaver_ref_test",
    srcs = ["beaver_ref_test.cc"],
    deps = [
        ":beaver_ref",
        ":beaver_test",
    ],
)

spu_cc_library(
    name = "prg_tensor",
    hdrs = ["prg_tensor.h"],
    deps = [
        "//spu/core:array_ref",
        "//spu/mpc/util:ring_ops",
        "@yasl//yasl/crypto:pseudo_random_generator",
    ],
)

spu_cc_library(
    name = "trusted_party",
    srcs = ["trusted_party.cc"],
    hdrs = ["trusted_party.h"],
    deps = [
        ":prg_tensor",
        "//spu/core:type_util",
        "//spu/mpc/util:ring_ops",
    ],
)

spu_cc_library(
    name = "beaver_tfp",
    srcs = ["beaver_tfp.cc"],
    hdrs = ["beaver_tfp.h"],
    deps = [
        ":beaver",
        ":trusted_party",
        "//spu/mpc/util:ring_ops",
        "@yasl//yasl/link",
        "@yasl//yasl/utils:serialize",
    ],
)

spu_cc_test(
    name = "beaver_tfp_test",
    srcs = ["beaver_tfp_test.cc"],
    deps = [
        ":beaver_test",
        ":beaver_tfp",
    ],
)

spu_cc_library(
    name = "beaver_cheetah",
    srcs = ["beaver_cheetah.cc"],
    hdrs = ["beaver_cheetah.h"],
    copts = EMP_COPT_FLAGS,
    deps = [
        ":beaver",
        ":prg_tensor",
        "//spu/crypto/ot/silent:primitives",
        "//spu/mpc/beaver/cheetah:cheetah_he",
        "//spu/mpc/util:ring_ops",
        "@com_github_microsoft_seal//:seal",
        "@yasl//yasl/link",
        "@yasl//yasl/utils:parallel",
    ],
)

spu_cc_test(
    name = "beaver_cheetah_test",
    size = "large",
    srcs = ["beaver_cheetah_test.cc"],
    copts = EMP_COPT_FLAGS,
    deps = [
        ":beaver_cheetah",
        ":beaver_test",
    ],
)
