load("//bazel:spu.bzl", "spu_cc_test")
load("//bazel:glob_lit_test.bzl", "glob_lit_tests")

glob_lit_tests(
    data = [":test_utilities"],
    driver = "@llvm-project//mlir:run_lit.sh",
    test_file_exts = ["mlir"],
)

# Bundle together all of the test utilities that are used by tests.
filegroup(
    name = "test_utilities",
    testonly = True,
    data = [
        "lit.cfg",
        "//spu/compiler/tools:mlir-pphlo-opt",
        "@llvm-project//llvm:FileCheck",
    ],
)

spu_cc_test(
    name = "end_to_end_test",
    srcs = ["end_to_end_test.cc"],
    data = [
        "//spu/compiler/test_data:pphlo_asms",
        "//spu/compiler/test_data:xla_dumps",
    ],
    tags = ["no-remote-cache"],
    deps = [
        "//spu/compiler:compile",
    ],
)
